{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BloxBot",
  "version": "0.2.2",
  "identifier": "ai.bloxbot.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BloxBot",
        "width": 800,
        "height": 600,
        "minWidth": 520,
        "minHeight": 400,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": "-",
      "entitlements": "entitlements.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/opencode"
    ],
    "resources": [
      "resources/studio-plugin",
      "resources/nodejs",
      "resources/mcp-server"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg1QUIyRjdGQkYwMkRGRjgKUldUNDN3Sy9meStyaFpjODB4Y3M2Smg2cURWVEFkeXpWMldsZ2tSRFpEazVvU1BialhuckxPaUcK",
      "endpoints": [
        "https://github.com/paralov/app-bloxbot-ai/releases/latest/download/latest.json"
      ]
    }
  }
}
